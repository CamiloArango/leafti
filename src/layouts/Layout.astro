---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css" rel="stylesheet" />
		<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
	</head>
	<body class="xl:mx-72 xl:my-12">
		<div class="flex flex-col min-h-screen">
			<div class="flex-grow">
				<Navbar />
				<slot />
			</div>
			<Footer />
		</div>
	</body>
</html>

<style is:global>

	:root {
		color-scheme: light dark;
	}

	@font-face {
		font-family: geistUltrablack;
		src: url('/fonts/geistUltrablack.woff2') format('woff2');
	}

	@font-face {
		font-family: geistBlack;
		src: url('/fonts/geistBlack.woff2') format('woff2');
	}

	@font-face {
		font-family: geistBold;
		src: url('/fonts/geistBold.woff2') format('woff2');
	}
	@font-face {
		font-family: geistMedium;
		src: url('/fonts/geistMedium.woff2') format('woff2');
	}

	@font-face {
		font-family: geistRegular;
		src: url('/fonts/geistRegular.woff2') format('woff2');
	}

	@font-face {
		font-family: geistUltralight;
		src: url('/fonts/geistUltralight.woff2') format('woff2');
	}

	body {
		background-color: #011a00;
		color: #ffffff;
		/* background-image: url('/background.svg'); */
	}

	h1 {
		font-family: geistUltrablack;
		font-size: 1.875rem/* 30px */;
  	line-height: 2.25rem/* 36px */;
	}

	h2 {
		font-family: geistBlack;
		font-size: 1.25rem/* 20px */;
  	line-height: 1.75rem/* 28px */;
	}

	h3 {
		font-family: geistBold;
		font-size: 1.125rem/* 18px */;
  	line-height: 1.75rem/* 28px */;
	}

	h4, p {
		font-family: geistMedium;
		font-size: 1rem/* 16px */;
  	line-height: 1.5rem/* 24px */;
	}

	h5 {
		font-family: geistRegular;
		font-size: 0.875rem/* 14px */;
  	line-height: 1.25rem/* 20px */;
	}

	h6 {
		font-family: geistUltralight;
		font-size: 0.75rem; /* 12px */
		line-height: 1rem; /* 16px */
	}
</style>
